<cilia xmlns:cilia="fr.liglab.adele.cilia" xmlns:jmx="org.apache.felix.ipojo.handlers.jmx"
	xmlns:ipojo="org.apache.felix.ipojo">

	<ipojo:component
		classname="fr.liglab.adele.cilia.administration.impl.CiliaAdminServiceImpl"
		name="Cilia-Admin-Service" immediate="true" architecture="true">
		<ipojo:provides/>
		<ipojo:requires field="ccontext" />
		<ipojo:requires field="parser" />
	</ipojo:component>

	<ipojo:component
		classname="fr.liglab.adele.cilia.administration.command.CiliaAdminServiceGogo"
		name="Cilia-Admin-Gogo" immediate="true" architecture="true">
		<ipojo:provides>
			<ipojo:property name="osgi.command.scope" type="String"
				value="cilia" />
			<ipojo:property name="osgi.command.function" type="String[]"
				value="{startChain,stopChain,copyComponent,createChain,emptyChain,deleteChain,chain,chains,loadChain,replaceComponent,updateChain,createAdapter,createMediator,deleteAdapter,deleteMediator,adapter,mediator,updateAdapter,updateMediator,createBinding,deleteBinding}" />
		</ipojo:provides>
		<ipojo:requires field="ccontext" />
		<ipojo:requires field="admin" />
	</ipojo:component>

	<ipojo:component
		classname="fr.liglab.adele.cilia.administration.fileinstall.CiliaFileInstall"
		name="Cilia-Deployer" architecture="true">
		<ipojo:provides />
		<ipojo:requires field="manager" />
		<ipojo:callback transition="validate" method="start" />
		<ipojo:callback transition="invalidate" method="stop" />
	</ipojo:component>

	<!-- Gogo commands : monitoring specification and runtime -->
	<ipojo:component
		classname="fr.liglab.adele.cilia.administration.command.GogoMonitoringCommands"
		name="Monitoring_Commands.gogo">
		<ipojo:provides
			specifications="fr.liglab.adele.cilia.administration.command.GogoMonitoringCommands">
			<ipojo:property name="osgi.command.scope" type="String"
				value="cilia" />
			<ipojo:property name="osgi.command.function" type="String[]"
				value="{
				        node_setup,node_rawdata,node_monitoring,
				        app_chains,app_chain_state,app_endpoints_in,app_endpoints_out,app_connected_to,
				        app_find_node,
				        app_callback_chain,app_callback_node,app_callback_measure,
				        my_entry
				        }" />

		</ipojo:provides>
		<ipojo:requires field="ciliaContext" />
		<ipojo:callback transition="validate" method="start" />
		<ipojo:callback transition="invalidate" method="stop" />
		<!-- <requires field="adminService" optional="true" /> -->
	</ipojo:component>


	<!-- INSTANCES -->

	<ipojo:instance component="Cilia-Admin-Service" name="Cilia-Admin-Service" />

	<ipojo:instance component="Cilia-Admin-Gogo" name="Cilia-Admin-Gogo" />

	<ipojo:instance component="Cilia-Deployer" name="Cilia-Deployer" />

	<ipojo:instance component="Monitoring_Commands.gogo"
		name="Monitoring_Commands.gogo" />

</cilia>
