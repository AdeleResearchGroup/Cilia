<ipojo>
	<!-- Proxy Importer for 'Modbus Devices' -->
	<component classname="fr.liglab.adele.modbus.proxy.ModbusProxyImporter"
		name="ModbusTCP.importer" immediate="true">
		<provides specifications="org.ow2.chameleon.rose.ImporterService">
			<property type="java.lang.String[]" name="endpoint.config"
				value="{Modbus/TCP}" />
		</provides>	
		<properties >
			<property name ="protocol.factory" field="m_factory" value="ModbusTCP.proxy" />
			<property name ="url.domain" field ="m_urldomain" type="java.lang.String" />
		</properties>	
		<requires field="roseMachine" id = "rose.machine"/>
		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />
	</component>
	
	<!-- Modbus/TCP Protocol stack Schneider = (Modbus + identification) -->
	<component classname="fr.liglab.adele.modbus.impl.ModbusProtocolImpl"
		name="ModbusTCP.proxy" immediate="true"  architecture="true" >
		<provides specification="fr.liglab.adele.protocol.modbus.ModbusProtocol"> 
		    <!--  Device urn  -->
			<property name="domain.id" type="java.lang.String" />
			<property name="product.code" type="java.lang.String"  />
			<property name="major.minor.revision" type="java.lang.String"  />
			<property name="vendor.name" type="java.lang.String"  />
		</provides>
		<properties propagation="true">
			<property name="device.ip.address" method="setHost" type="java.lang.String"
				mandatory="true" />
 			<property name="device.ip.port" method="setPort" value="502" />
		</properties>
		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />
	</component>
	
	<!-- Component Modbus/TCP Discovery  -->
	<component classname="fr.liglab.adele.modbus.discovery.ModbusTCPScanner"
		name="ModbusTCP.discovery" immediate="true" architecture="true">
		<properties propagation="true" >
			<property name="start.ip.address" type="java.lang.String"
				method="setStartAddress" />
			<property name="end.ip.address" type="java.lang.String" method="setEndAddress" />
			<property name="scan.period" type="java.lang.String" field="m_period"
				value="1000" />
			<property name="scan.delay" field="m_delay" value="100" />
			<property name="ping.time.out" field="m_timeout" value="2000" />
			<property name="modbus.port.number" field="m_port" value="502" />
		</properties>
		<requires field="roseMachine" id = "rose.machine" />
		<callback transition="validate" method="runScan" />
		<callback transition="invalidate" method="cancelScan" />
	</component>
   
</ipojo>
