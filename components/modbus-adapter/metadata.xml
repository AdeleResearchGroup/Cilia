<ipojo xmlns:cilia="fr.liglab.adele.cilia">

	<collector
		classname="fr.liglab.adele.cilia.modbus.ModbusCollector"
		name="modbus-in-collector" namespace="fr.liglab.adele.cilia">
		<cilia:dependency field="m_ModbusServices" >
			<callback type="bind" method="bindService" />
			<callback type="unbind" method="unbindService" />
		</cilia:dependency>
		<properties>
			<property name="pool.period" method="period" value="1000"
				type="long" />
			<property name="pool.delay" method="delay" value="3000"
				type="long" />
			<property name="modbus.slave.address" method="setUnitID"
				value="0" type="int" />
			<property name="read.holding.registers" method="setReadHoldingRegisters"
				type="java.util.Map" />
			<property name="read.discrete.inputs" method="setReadDiscreteInputs"
				type="java.util.Map" />
			<property name="read.input.registers" method="setReadInputRegisters"
				type="java.util.Map" />
			<property name="read.coils" method="setReadCoils" type="java.util.Map" />
			<property name="data.type" method="setDataType" type="java.lang.String" />
		</properties>
		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />
	</collector>

	<adapter name="modbus-in-adapter" pattern="in-only" >
		<collector type="modbus-in-collector" />
		<ports>
			<out-port name="unique" type="*" />
		</ports>
	</adapter>

</ipojo>
